<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uniderp.controller.ActCompromissos">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataInicio"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Data Inicio"
        android:layout_toStartOf="@+id/dataFim" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataFim"
        android:layout_alignTop="@+id/editText"
        android:layout_centerHorizontal="true"
        android:hint="Data Fim"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listCompromissos"
        android:layout_below="@+id/dataFim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Compromissos cadastrados:"
        android:id="@+id/textView7"
        android:layout_below="@+id/dataFim" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/buscarComp"
        android:layout_above="@+id/listCompromissos"
        android:layout_alignRight="@+id/listCompromissos"
        android:layout_alignEnd="@+id/listCompromissos"
        android:layout_toEndOf="@+id/dataFim"

        android:layout_toRightOf="@+id/dataFim"
        android:onClick="filtarCompromissos" />

</RelativeLayout>
